	public void makeWaterRise() {
		waterLevel++;
	}
	public void drawTreasureCard() {
		TreasureCard tc=treasureCards.drawCard();
		if (tc.isWaterRises()) {
			makeWaterRise();
		}
		if (tc.isAction()) {
			
		}
	}
}
